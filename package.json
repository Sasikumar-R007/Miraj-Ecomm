{
  "name": "miraj-candles-workspace",
  "version": "1.0.0",
  "description": "Miraj Candles E-commerce Platform",
  "scripts": {
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build:client": "cd client && npm run build",
    "build:admin": "cd admin && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../admin && npm install",
    "start:all": "concurrently \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:admin\""
  },
  "workspaces": [
    "client",
    "server",
    "admin"
  ],
  "dependencies": {
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5"
  }
}
